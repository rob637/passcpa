# Firebase Configuration for PassCPA
# Copy this to .env and fill in your values

VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# Set to 'true' to use Firebase emulators for local development
VITE_USE_EMULATORS=false

# ====================================
# Google Analytics 4 (Optional)
# ====================================
# Get from Google Analytics → Admin → Data Streams → Web Stream
# Format: G-XXXXXXXXXX
VITE_GA_MEASUREMENT_ID=

# ====================================
# Google Ads Conversion Tracking (Required for SEM)
# ====================================
# Get from Google Ads → Tools → Conversions → Tag setup
# Format: AW-XXXXXXXXX/YYYYYYYYYYYYYY
# You can also set up different conversion IDs for signup, trial, purchase
VITE_GOOGLE_ADS_CONVERSION_ID=

# ====================================
# AI Tutor - Google Gemini (Required for AI features)
# ====================================
# Get from https://aistudio.google.com/apikey
VITE_GEMINI_API_KEY=your-gemini-api-key

# ====================================
# Course Availability
# ====================================
# Set to 'false' to disable a course. Omitting or 'true' enables it.
VITE_ENABLE_CPA_COURSE=true
VITE_ENABLE_EA_COURSE=true
VITE_ENABLE_CMA_COURSE=true
VITE_ENABLE_CIA_COURSE=true
VITE_ENABLE_CFP_COURSE=true
VITE_ENABLE_CISA_COURSE=true

# ====================================
# Development Options
# ====================================
# Enable analytics tracking in development mode
VITE_ENABLE_ANALYTICS=false
