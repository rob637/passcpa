# Firebase Configuration for PassCPA
# Copy this to .env and fill in your values

VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# Set to 'true' to use Firebase emulators for local development
VITE_USE_EMULATORS=false

# ====================================
# Google Analytics 4 (Optional)
# ====================================
# Get from Google Analytics → Admin → Data Streams → Web Stream
# Format: G-XXXXXXXXXX
VITE_GA_MEASUREMENT_ID=

# ====================================
# AI Tutor - OpenAI (Optional)
# ====================================
# Get from https://platform.openai.com/api-keys
VITE_OPENAI_API_KEY=

# ====================================
# Development Options
# ====================================
# Enable analytics tracking in development mode
VITE_ENABLE_ANALYTICS=false
