{
  "name": "voraprep",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "description": "VoraPrep - AI-powered CPA exam prep that gets you to 75+",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "build:staging": "vite build --mode staging",
    "build:prod": "vite build --mode production",
    "preview": "vite preview",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "NODE_OPTIONS='--max-old-space-size=4096' vitest",
    "test:run": "NODE_OPTIONS='--max-old-space-size=4096' vitest run",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=4096' vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:visual": "playwright test visual-regression.spec.js",
    "test:e2e:update-snapshots": "playwright test --update-snapshots",
    "test:all": "npm run test:run && npm run test:e2e",
    "deploy:dev": "npm run build:dev && firebase deploy --only hosting -P development",
    "deploy:staging": "npm run build:staging && firebase deploy --only hosting -P staging",
    "deploy:prod": "npm run build:prod && firebase deploy --only hosting -P production",
    "seed": "node scripts/seedQuestions.js",
    "seed:force": "node scripts/seedQuestions.js --force",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css}\"",
    "check:artifacts": "bash scripts/check-ai-artifacts.sh",
    "format:check": "prettier --check \"src/**/*.{js,jsx,json,css}\"",
    "build:analyze": "ANALYZE=true vite build && echo 'Bundle stats written to dist/stats.html'"
  },
  "dependencies": {
    "@capacitor-firebase/authentication": "^8.0.1",
    "@capacitor/android": "^8.0.1",
    "@capacitor/app": "^8.0.0",
    "@capacitor/cli": "^8.0.1",
    "@capacitor/core": "^8.0.1",
    "@capacitor/ios": "^8.0.1",
    "@capacitor/keyboard": "^8.0.0",
    "@capacitor/local-notifications": "^8.0.0",
    "@capacitor/splash-screen": "^8.0.0",
    "@capacitor/status-bar": "^8.0.0",
    "@types/dompurify": "^3.0.5",
    "canvas-confetti": "^1.9.4",
    "clsx": "^2.1.1",
    "date-fns": "^3.3.1",
    "dompurify": "^3.3.1",
    "firebase": "^12.8.0",
    "framer-motion": "^12.34.0",
    "html2canvas": "^1.4.1",
    "lucide-react": "^0.330.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.22.0",
    "recharts": "^2.12.0",
    "web-vitals": "^5.1.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^25.0.10",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-istanbul": "^1.6.1",
    "@vitest/coverage-v8": "^1.6.1",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.26",
    "fake-indexeddb": "^6.2.5",
    "firebase-admin": "^13.6.0",
    "globals": "^17.1.0",
    "jsdom": "^27.4.0",
    "postcss": "^8.4.35",
    "prettier": "^3.8.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.9.3",
    "vite": "^5.1.0",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^1.2.2",
    "workbox-window": "^7.4.0"
  }
}
