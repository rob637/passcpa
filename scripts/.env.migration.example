# Migration Scripts Environment Variables
# Copy this to .env.migration.local and fill in your values
# NEVER commit the .local version!

# ============================================
# Which environment to target (REQUIRED)
# Options: development, staging, production
# ============================================
FIREBASE_ENV=development

# ============================================
# Development Environment (passcpa-dev)
# ============================================
FIREBASE_DEVELOPMENT_API_KEY=
FIREBASE_DEVELOPMENT_AUTH_DOMAIN=passcpa-dev.firebaseapp.com
FIREBASE_DEVELOPMENT_PROJECT_ID=passcpa-dev
FIREBASE_DEVELOPMENT_STORAGE_BUCKET=passcpa-dev.firebasestorage.app
FIREBASE_DEVELOPMENT_MESSAGING_SENDER_ID=
FIREBASE_DEVELOPMENT_APP_ID=

# ============================================
# Staging Environment (voraprep-staging)
# ============================================
FIREBASE_STAGING_API_KEY=
FIREBASE_STAGING_AUTH_DOMAIN=voraprep-staging.firebaseapp.com
FIREBASE_STAGING_PROJECT_ID=voraprep-staging
FIREBASE_STAGING_STORAGE_BUCKET=voraprep-staging.firebasestorage.app
FIREBASE_STAGING_MESSAGING_SENDER_ID=
FIREBASE_STAGING_APP_ID=

# ============================================
# Production Environment (voraprep-prod)
# ⚠️ BE VERY CAREFUL WITH THESE!
# ============================================
FIREBASE_PRODUCTION_API_KEY=
FIREBASE_PRODUCTION_AUTH_DOMAIN=voraprep-prod.firebaseapp.com
FIREBASE_PRODUCTION_PROJECT_ID=voraprep-prod
FIREBASE_PRODUCTION_STORAGE_BUCKET=voraprep-prod.firebasestorage.app
FIREBASE_PRODUCTION_MESSAGING_SENDER_ID=
FIREBASE_PRODUCTION_APP_ID=
